<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.renzo.mybeertrip"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="fr.renzo.mybeertrip.MyBeerTrip"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name="fr.renzo.mybeertrip.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.renzo.mybeertrip.activities.AddDrinkActivity"
            android:label="adddrinkactivity" >
        </activity>
        <activity
            android:name="fr.renzo.mybeertrip.activities.AddBeerActivity"
            android:label="addbeeractivity" >
        </activity>
    </application>

</manifest>

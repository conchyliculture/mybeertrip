<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Please select a beer" />

    <Button
        android:id="@+id/fragment_search_beer_scan_barcode_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan barcode" />

    <AutoCompleteTextView
        android:id="@+id/fragment_search_beer_autocomplete_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="3"
        android:ems="10"
        android:hint="Search Beer Name" >

        <requestFocus />
    </AutoCompleteTextView>

    <Button
        android:id="@+id/fragment_search_beer_add_beer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add new beer" />

</LinearLayout>
